{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    // "allowJs": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "checkJs": true,
    "allowJs": true,
    // "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "types": [
      "@types/node",
      "@nuxt/vue-app",
      "@nuxt/content"
    ],
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      // "dom.iterable",
      // "scripthost"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    // "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
